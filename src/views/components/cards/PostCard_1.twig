{% macro Component(param = {
    src: '',
    title: '',
    desc: '',
    alt: ''
}) %}

<div class="flex flex-col gap-6 PostCard_1">

  <div class="image">
    <img src="{{ param.src }}" alt="{{ param.alt }}" class="w-full h-auto rounded-t-lg" />
  </div>
  <div class="info">
    <h3 class="mb-2 text-2xl font-semibold text-center title text-darkBlue">{{ param.title }}</h3>

    {% if param.desc != '' %}
      <p class="mb-4 text-base desc text-grayish">{{ param.desc }}</p>
    {% endif %}

  </div>

</div>


{% endmacro %}
