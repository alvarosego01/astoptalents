
{% macro Component(param = {
  image: '',
  alt: '',
  icon: '',
  title: '',
  subTitle: '',
  desc: '',
  side: 'left',
  button: {
    text: '',
    link: '#',
  }
}) %}

{% from 'components/buttons/Button.twig' import Component as Button %}
{% from 'components/cards/IconCard_1.twig' import Component as IconCard_1 %}

{% set side = param.side %}
{% set button = param.button %}

<div class="ImageInfo_1">
  <div class="grid w-10/12 gap-10 mx-auto  pcTab:w-full pcTab:gap-5 pcTab:grid-cols-2
  {% if side == 'right' %}
      !flex !flex-col-reverse pcTab:!grid
  {% endif %}
  ">

    {% if side == 'left' %}

      <div class="relative w-full h-full col-span-2 mx-auto overflow-hidden pcTab:col-span-1 imageContent image"
      data-aos="zoom-out" data-aos-delay="100"
      >
          <img class="block object-cover object-top w-auto h-64 sm:h-96 pcTab:h-[450px] pcTab:w-[450px] mx-auto rounded-[50px]" src="{{ param.image }}" alt="{{ param.alt }}">
      </div>

      <div class="flex flex-col items-center justify-center col-span-2 gap-5 pcTab:!items-start pcTab:col-span-1 pcTab:pr-8 info lg:pr-14"
      data-aos="zoom-out" data-aos-delay="150">

        {{
          IconCard_1({
            icon: param.icon | raw,
            title: param.title,
            desc: param.desc,
            centerResponsive: true,
          })
        }}
      {% if button %}
        <div>
           {{ Button({
          text: button.text,
          href: button.link,
          type: 'primary'
          }) }}
        </div>
      {% endif %}
      </div>

    {% endif %}
    {% if side == 'right' %}

      <div class="flex flex-col items-center justify-center col-span-2 gap-5 pcTab:items-start pcTab:col-span-1 info pcTab:pl-8 lg:pl-14"
      data-aos="zoom-out" data-aos-delay="100"
      >
        {{
          IconCard_1({
            icon: param.icon | raw,
            title: param.title,
            desc: param.desc,
            centerResponsive: true,
          })
        }}
            {% if button %}
        <div>
           {{ Button({
          text: button.text,
          href: button.link,
          type: 'primary'
          }) }}
        </div>
      {% endif %}
      </div>

      <div class="relative w-full h-full col-span-2 mx-auto overflow-hidden pcTab:col-span-1 imageContent image"
      data-aos="zoom-out" data-aos-delay="150"
      >
        <img class="block object-cover object-top w-auto h-64 sm:h-96 pcTab:h-[450px] pcTab:w-[450px] mx-auto rounded-[50px]" src="{{ param.image }}" alt="{{ param.alt }}">
      </div>

    {% endif %}

  </div>
</div>

{% endmacro %}