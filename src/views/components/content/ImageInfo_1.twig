
{% macro Component(param = {
  image: '',
  alt: '',
  icon: '',
  title: '',
  desc: '',
  side: 'left'
}) %}

{% from 'components/buttons/Button.twig' import Component as Button %}
{% from 'components/cards/IconCard_1.twig' import Component as IconCard_1 %}

<div class="ImageInfo_1">
  <div class="grid gap-16 pcTab:grid-cols-2 ">

    <div class="relative w-full col-span-2 pcTab:col-span-1 overflow-hidden rounded-[60px] mx-auto imageContent image">
        <img
          class="object-cover w-full h-full mx-auto"
          src="{{ param.image }}" alt="{{ param.alt }}">
    </div>

    <div class="flex items-center justify-center col-span-2 pcTab:col-span-1 info">
      {{
        IconCard_1({
          icon: param.icon | raw,
          title: param.title,
          desc: param.desc,
          centerResponsive: true,
        })
      }}

    </div>

  </div>
</div>

{% endmacro %}